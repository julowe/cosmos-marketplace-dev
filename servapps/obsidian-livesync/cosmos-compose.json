{
  "cosmos-installer": {
    "form": [
      {
        "name": "couchdbAdminUsername",
        "label": "CouchDB Admin Username",
        "initialValue": "",
        "type": "text"
      },
      {
        "name": "couchdbAdminPassword",
        "label": "CouchDB Admin Password",
        "initialValue": "",
        "type": "text"
      }
    ]
  },
  "minVersion": "0.9.0",
  "name": "obsidian-livesync",
  "services": {
    "{ServiceName}": {
      "image": "ghcr.io/julowe/obsidian-livesync:latest",
      "container_name": "{ServiceName}",
      "restart": "unless-stopped",
      "environment": [
        "COUCHDB_USER={Context.couchdbAdminUsername}",
        "COUCHDB_PASSWORD={Context.couchdbAdminPassword}"
      ],
      "labels": {
        "cosmos-force-network-secured": "true",
        "cosmos-auto-update": "false",
        "cosmos-icon": "https://obsidian.md/images/obsidian-logo-gradient.svg"
      },
      "volumes": [
        {
          "source": "{ServiceName}-data",
          "target": "/opt/couchdb/data",
          "type": "volume"
        },
        {
          "source": "{ServiceName}-etc",
          "target": "/opt/couchdb/etc",
          "type": "volume"
        }
      ],
      "routes": [
        {
          "name": "{ServiceName}",
          "description": "Expose {ServiceName} to the web",
          "useHost": true,
          "target": "http://{ServiceName}:5984",
          "mode": "SERVAPP",
          "Timeout": 14400000,
          "ThrottlePerMinute": 12000,
          "BlockCommonBots": true,
          "DisableHeaderHardening": true,
          "SmartShield": {
            "Enabled": true
          }
        }
      ]
    }
  }
}
